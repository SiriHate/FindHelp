<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313338"
    tools:context=".view.fragments.OrganizerPageFragment">


    <LinearLayout
        android:id="@+id/organizer_page_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/organizer_page_search_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#1e1f22"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/organizer_page_search_bar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                app:iconifiedByDefault="false"
                android:background="@drawable/edittext_background"
                android:queryHint="Введите поисковой запрос"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/organizer_page_add_vacancy_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#2b2d31"
                app:srcCompat="@drawable/add"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <ListView
            android:id="@+id/organizer_page_vacancy_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#313338"
            android:dividerHeight="5dp"
            android:overScrollMode="never">

        </ListView>

    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#2b2d31"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/user_vacancies_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2b2d31"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_vacancies_list_item_vacancy_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_black"
            android:padding="16dp"
            android:text="@string/user_vacancies_list_item_vacancy_name"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/vacancy_item_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:background="#2b2d31"
            android:contentDescription="@string/vacancy_item_delete_button"
            app:srcCompat="@drawable/delete"
            app:tint="#BEBEBE" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#2b2d31">

    <LinearLayout
        android:id="@+id/user_vacancies_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b2d31"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/user_vacancies_list_item_vacancy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:focusable="true"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/user_vacancies_list_item_vacancy_name"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <View
            android:id="@+id/user_vacancies_list_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/user_vacancies_list_item_match_percent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_vacancies_list_item_match_percent_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/user_vacancies_list_item_match_percent_tittle"
                android:textColor="#BEBEBE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_vacancies_list_item_match_percent_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="@string/user_vacancies_list_item_match_percent_num"
                android:textColor="#8BC34A"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
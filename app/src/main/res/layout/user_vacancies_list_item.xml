<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">


    <LinearLayout
        android:id="@+id/user_vacancies_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b2d31"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_vacancies_list_item_vacancy_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="true"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="Волонтер мед-помощник"
            android:textColor="#efefef"
            android:textSize="20sp" />

        <View
            android:id="@+id/user_vacancies_list_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#efefef" />

        <LinearLayout
            android:id="@+id/user_vacancies_list_item_match_percent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_vacancies_list_item_match_percent_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal|center_vertical"
                android:text="Совпадение навыков: "
                android:textColor="#7F7F7F"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_vacancies_list_item_match_percent_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="100% (5/5)"
                android:textColor="@color/green_indicator"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
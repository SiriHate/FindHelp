<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313338"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragments.LoginPageFragment">

    <TextView
        android:id="@+id/login_fragment_login_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/login_fragment_email_tittle"
        android:textColor="#efefef"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_fragment_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#d7d8d9"
        android:drawableStart="@drawable/email"
        android:drawablePadding="5dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/login_fragment_login_input"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/login_fragment_password_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/login_fragment_password_tittle"
        android:textColor="#efefef"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_fragment_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#d7d8d9"
        android:drawableStart="@drawable/password"
        android:drawablePadding="5dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/login_fragment_password_input"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/login_fragment_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#5f93e4"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/login_fragment_login_button"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/login_fragment_registration_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/login_fragment_registration_button"
        android:textColor="#efefef"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/login_fragment_registration_login_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:indeterminateTint="@color/Secondary_color_200"
        android:visibility="gone" />

</LinearLayout>
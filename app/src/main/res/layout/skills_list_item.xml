<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#2b2d31"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2b2d31"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skill_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:text="@string/skill_item_name"
            android:textColor="#dfe0e3"
            android:textSize="18sp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/skill_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="#a8c8ff"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
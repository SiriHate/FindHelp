<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313338"
    android:orientation="vertical"
    tools:context=".view.fragments.EditVacancySkillsFragment">

    <TextView
        android:id="@+id/edit_vacancy_skills_fragment_list_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/Secondary_color_900"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/edit_vacancy_skills_fragment_list_tittle"
        android:textColor="#efefef"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_vacancy_skills_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <Button
        android:id="@+id/edit_vacancy_skills_fragment_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Secondary_color_600"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/edit_vacancy_skills_fragment_create_button"
        android:textSize="16sp" />
</LinearLayout>
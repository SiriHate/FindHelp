<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.RegisterFragment">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Email_tittle_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите ваш email:" />

        <EditText
            android:id="@+id/Email_input_register"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/First_password_tittle_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите ваш пароль:" />

        <EditText
            android:id="@+id/First_password_input_register"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/Second_password_tittle_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Повторите ваш пароль:" />

        <EditText
            android:id="@+id/Second_password_input_register"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/Register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#0000FF"
            android:text="Зарегистрироваться" />

    </LinearLayout>
</FrameLayout>
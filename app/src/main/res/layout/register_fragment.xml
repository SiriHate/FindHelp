<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.RegisterFragment">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Email_tittle_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите ваш email:" />

        <EditText
            android:id="@+id/Email_input_register"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/First_password_tittle_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите ваш пароль:" />

        <EditText
            android:id="@+id/First_password_input_register"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/Second_password_tittle_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Повторите ваш пароль:" />

        <EditText
            android:id="@+id/Second_password_input_register"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ems="10"
            android:inputType="textPassword" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Type_of_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectionRequired="false"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/User_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Я пользователь" />

            <com.google.android.material.chip.Chip
                android:id="@+id/Organaizer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Я организатор" />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/Register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:backgroundTint="#0000FF"
            android:text="Зарегистрироваться" />

    </LinearLayout>
</FrameLayout>
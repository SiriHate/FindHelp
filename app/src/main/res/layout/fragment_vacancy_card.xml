<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313338"
    tools:context=".view.fragments.VacancyCardFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/vacancy_card_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/vacancy_card_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vacancy_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/Secondary_color_900"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Волонтер мед-помощник"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2b2d31"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vacancy_card_main_info_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Secondary_color_800"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="ОСНОВНАЯ ИНФОРМАЦИЯ"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/vacancy_card_city_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/vacancy_card_city_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/city"
                            app:tint="#efefef" />

                        <TextView
                            android:id="@+id/vacancy_card_organization_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:text="г. Москва"
                            android:textColor="#efefef"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vacancy_card_phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/vacancy_card_phone_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/phone"
                            app:tint="#efefef" />

                        <TextView
                            android:id="@+id/vacancy_card_organization_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:text="+7(495)765-22-15"
                            android:textColor="#efefef"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vacancy_card_contact_person_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/vacancy_card_contact_person_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/contact"
                            app:tint="#efefef" />

                        <TextView
                            android:id="@+id/vacancy_card_contact_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Костылев Владимир Александрович"
                            android:textColor="#efefef"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vacancy_card_company_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/vacancy_card_company_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/company"
                            app:tint="#efefef" />

                        <TextView
                            android:id="@+id/vacancy_card_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/roboto_regular"
                            android:text="ООО Добрый волонтер"
                            android:textColor="#efefef"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2b2d31"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vacancy_card_description_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Secondary_color_700"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="ОПИСАНИЕ ВАКАНСИИ"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/vacancy_card_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Необходимо помогать мед персоналу в оказании мед помощи пострадавшим в результате пожара"
                        android:textColor="#efefef"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2b2d31"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vacancy_card_skills_list_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@color/Secondary_color_600"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="НЕОБХОДИМЫЕ НАВЫКИ"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/vacancy_card_skills_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:overScrollMode="never" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/vacancy_card_edit_vacancy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/Secondary_color_800"
                android:fontFamily="@font/roboto_bold"
                android:text="Редактировать вакансию"
                android:textSize="16sp"
                android:visibility="gone"
                app:icon="@drawable/edit" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".view.fragments.VacancyCardPageFragment">

    <ProgressBar
        android:id="@+id/vacancy_card_loading_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/Secondary_color_200"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/vacancy_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:cardBackgroundColor="#2b2d31"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/vacancy_card_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbarThumbVertical="@color/Secondary_color_50">

            <LinearLayout
                android:id="@+id/vacancy_card_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/vacancy_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Secondary_color_900"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:text="@string/vacancy_card_name"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <View
                    android:id="@+id/vacancy_card_divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BEBEBE" />

                <TextView
                    android:id="@+id/vacancy_card_main_info_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="8dp"
                    android:text="@string/vacancy_card_main_info_tittle"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/vacancy_card_vacancy_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="@string/vacancy_card_organization_city"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:drawableLeftCompat="@drawable/city"
                    app:drawableTint="#BEBEBE" />

                <TextView
                    android:id="@+id/vacancy_card_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="@string/vacancy_card_company_name"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:drawableLeftCompat="@drawable/company"
                    app:drawableTint="#BEBEBE" />

                <TextView
                    android:id="@+id/vacancy_card_organization_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="@string/vacancy_card_organization_phone"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:drawableStartCompat="@drawable/phone"
                    app:drawableTint="#BEBEBE" />

                <TextView
                    android:id="@+id/vacancy_card_contact_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:text="@string/vacancy_card_contact_person"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:drawableStartCompat="@drawable/contact_person"
                    app:drawableTint="#BEBEBE" />

                <View
                    android:id="@+id/vacancy_card_divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BEBEBE" />

                <TextView
                    android:id="@+id/vacancy_card_description_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="8dp"
                    android:text="@string/vacancy_card_description_tittle"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/vacancy_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/vacancy_card_description"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/vacancy_card_divider_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#BEBEBE" />

                <TextView
                    android:id="@+id/vacancy_card_skills_list_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="8dp"
                    android:text="@string/vacancy_card_skills_list_tittle"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/vacancy_card_empty_list_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="@string/empty_list_message"
                    android:textColor="#BEBEBE"
                    android:textSize="20sp"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/think" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vacancy_card_skills_list"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:overScrollMode="never"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/vacancy_card_edit_vacancy_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/Secondary_color_600"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/vacancy_card_edit_vacancy_button"
                    android:textSize="16sp"
                    app:icon="@drawable/edit"
                    tools:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

</FrameLayout>